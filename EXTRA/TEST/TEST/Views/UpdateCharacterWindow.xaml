<Window x:Class="TEST.Views.UpdateCharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEST.Views"
        mc:Ignorable="d"
        Title="UpdateCharacterWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel Width="200"  HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Логин"/>
                <TextBox x:Name="CharacterLogInTextBox"/>
                <TextBlock Text="Имя"/>
                <TextBox x:Name="CharacterNameTextBox"/>
                <TextBlock Text="Пароль"/>
                <TextBox x:Name="CharacterPasswordTextBox"/>
                <Button x:Name="UpdateBtn" Content="Обновить" Click="UpdateBtn_Click" />
            </StackPanel>

        </ScrollViewer>
    </Grid>
</Window>
