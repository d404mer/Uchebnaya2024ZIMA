<Window x:Class="TEST.Views.CharactersDataGridView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEST.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CharactersDataGridView" Height="474" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="391*"/>
            <RowDefinition Height="44*"/>
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Characters}" 
      AutoGenerateColumns="True"
        x:Name="CharactersDataGrid"
                  MouseDoubleClick="DataGrid_MouseDoubleClick"
      Grid.Row="0"
      SelectedItem="{Binding SelectedCharacter, Mode=TwoWay}"
      Margin="10"
      CanUserAddRows="False"/>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <Button x:Name="Add" 
     Content="Добавить"
     Width="70" 
     Height="25"
     Margin="0,0,10,0" 
     Click="Add_Click"/>

            <Button x:Name="Delete" 
     Content="Удалить"
     Width="70" 
     Height="25"
     Click="Delete_Click"/>
           
        </StackPanel>
    </Grid>
</Window>
